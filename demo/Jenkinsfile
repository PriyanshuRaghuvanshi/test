pipeline {
    agent any 
    tools {maven 'maven'}
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package -f demo/pom.xml '
            }
        }
         stage('Build docker image'){
            steps{
                script{
                    cd /demo
                    sh 'docker build -t assignment .'
                }
            }
        }
    }
}
